<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/dark_grey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/toolbar_height"
    android:id="@+id/drawerLayoutAboutActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guidelineAboutTextLeftMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.21" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineButtonsLeftMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.07" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineButtonsRightMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineButtonsMiddleLeftMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineButtonsMiddleRightMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineAboutTextRightMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.859" />


    <android.support.constraint.Guideline
        android:id="@+id/guidelineLogoBottomMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.165" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineAboutTextTopMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.26" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineAboutTextBottomMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.77" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineButtonsTopMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.89" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineButtonsBottomMargin"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sunrise_logo_on_dark"
        app:layout_constraintBottom_toTopOf="@id/guidelineLogoBottomMargin"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/agencyfb_bold"
        android:textSize="14dp"
        android:textColor="#B1B1B1"
        android:text="@string/about_sunrise_networks"
        app:layout_constraintTop_toBottomOf="@id/guidelineAboutTextTopMargin"
        app:layout_constraintBottom_toTopOf="@id/guidelineAboutTextBottomMargin"
        app:layout_constraintStart_toEndOf="@id/guidelineAboutTextLeftMargin"
        app:layout_constraintEnd_toStartOf="@id/guidelineAboutTextRightMargin"/>

    <Button
        android:id="@+id/buttonReturnToHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidelineButtonsTopMargin"
        app:layout_constraintBottom_toTopOf="@id/guidelineButtonsBottomMargin"
        app:layout_constraintStart_toEndOf="@id/guidelineButtonsLeftMargin"
        app:layout_constraintEnd_toStartOf="@id/guidelineButtonsMiddleLeftMargin"
        android:background="@drawable/rounded_button"
        android:text="Return"
        android:fontFamily="@font/agencyfb_bold"
        android:textSize="20dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/buttonContactSunrise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guidelineButtonsTopMargin"
        app:layout_constraintBottom_toTopOf="@id/guidelineButtonsBottomMargin"
        app:layout_constraintEnd_toStartOf="@id/guidelineButtonsRightMargin"
        app:layout_constraintStart_toEndOf="@id/guidelineButtonsMiddleRightMargin"
        android:background="@drawable/rounded_button_blue"
        android:text="Contact"
        android:fontFamily="@font/agencyfb_bold"
        android:textSize="20dp"
        android:textAllCaps="false"/>
</android.support.constraint.ConstraintLayout>