<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="245dp"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:background="@color/white">
        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:id="@+id/constraintLayoutDrawerHeader"
            app:layout_constraintBottom_toTopOf="@id/linearLayoutDrawerHeaderBottom"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.Guideline
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintGuide_percent=".5"
                android:orientation="horizontal"/>

            <TextView
                android:id="@+id/textViewAvatar"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:background="@drawable/circle"
                android:foregroundGravity="center"
                android:text="AA"
                android:textSize="26dp"
                android:textColor="@color/blueButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center" />

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:layout_marginLeft="8dp"
                android:textSize="26dp"
                android:textColor="@color/blueButton"
                android:fontFamily="@font/agencyfb_bold"
                android:text="admin admin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/textViewAvatar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:textSize="9dp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/agencyfb_bold"
                android:text="admin admin"
                app:layout_constraintTop_toBottomOf="@id/textViewUserName"
                app:layout_constraintEnd_toEndOf="@id/textViewUserName"
                app:layout_constraintStart_toStartOf="@id/textViewUserName"/>

        </android.support.constraint.ConstraintLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayoutDrawerHeaderBottom"
        android:layout_width="match_parent"
        android:background="@color/dark_grey"
        android:layout_height="102dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/constraintLayoutDrawerHeader">

    </LinearLayout>
<android.support.constraint.ConstraintLayout
    android:id="@+id/constraintLayoutDrawerButtons"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    app:layout_constraintTop_toBottomOf="@id/linearLayoutDrawerHeaderBottom"
    android:background="@color/dark_grey">
    <Button
        android:id="@+id/buttonDrawerHome"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_button_blue"
        android:text="Home"
        android:fontFamily="@font/agencyfb_bold"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDrawerSupport"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_button_blue"
        android:text="Support"
        android:fontFamily="@font/agencyfb_bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/buttonDrawerHome"
        app:layout_constraintStart_toStartOf="@id/buttonDrawerHome"
        tools:layout_editor_absoluteX="22dp" />

    <Button
        android:id="@+id/buttonDrawerAbout"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_button_blue"
        android:text="About Sunrise Networks GmbH"
        android:fontFamily="@font/agencyfb_bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/buttonDrawerSupport"
        app:layout_constraintStart_toStartOf="@id/buttonDrawerHome"
        tools:layout_editor_absoluteX="22dp" />

    <Button
        android:id="@+id/buttonDrawerLogout"
        android:layout_width="202dp"
        android:layout_height="42dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/rounded_button_blue"
        android:text="Sign out"
        android:fontFamily="@font/agencyfb_bold"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/buttonDrawerAbout"
        app:layout_constraintStart_toStartOf="@id/buttonDrawerHome"
        tools:layout_editor_absoluteX="22dp" />

</android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>

